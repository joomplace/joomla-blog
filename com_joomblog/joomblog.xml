		</submenu>
		<files>
			<filename>install.sql.php</filename>
			<filename>install/backend.zip</filename>
			<filename>install/frontend.zip</filename>
			<filename>install/index.html</filename>
		</files>
		<languages folder="languages">
		  <language tag="en-GB">admin/en-GB.com_joomblog.sys.ini</language>
		  <language tag="en-GB">admin/en-GB.com_joomblog.ini</language>
		</languages>
	</administration>
	<languages folder="languages">
		<language tag="en-GB">site/en-GB.com_joomblog.ini</language>
	</languages>
