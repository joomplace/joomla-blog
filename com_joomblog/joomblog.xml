	<version>1.3.0.005</version>
	<description>Blog system for Joomla</description>
	<scriptfile>install.joomblog.php</scriptfile>
	<files>
	</files>
	<media destination="com_joomblog" folder="media">
		<filename>index.html</filename>
		<folder>images</folder>
	</media>
	<administration>
		<menu alt="Joomblog">COM_JOOMBLOG</menu>
		<submenu>
			<menu link="option=com_categories&amp;view=categories&amp;extension=com_joomblog" alt="Joomblog/Categories">COM_JOOMBLOG_SUBMENU_CATEGORIES</menu>
			<menu link="option=com_joomblog&amp;view=blogs" alt="Joomblog/Manage blog items">COM_JOOMBLOG_SUBMENU_BLOGS</menu>
            <menu link="option=com_joomblog&amp;view=posts" alt="Joomblog/Manage blogs">COM_JOOMBLOG_SUBMENU_POSTS</menu>
